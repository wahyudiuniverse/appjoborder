{
  "compilerOptions": {
    "module": "es6",
    "lib": ["es2017", "dom"],
    "target": "ES2020",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "newLine": "lf",
    "declaration": false,
    "declarationMap": false,
    "types": ["@types/node", "vitest/globals", "vitest/jsdom"],
  },
  "include": [".", "../src"],
  "exclude": ["**/node_modules", "**/public"]
}
